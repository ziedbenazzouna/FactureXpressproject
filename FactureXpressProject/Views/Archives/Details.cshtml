@model FactureXpressProject.Models.Commande
@using FactureXpressProject.Models;

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Commande</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Client.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>

        <dt>
            Total
        </dt>

        <dd>
            @ViewBag.totalCom
        </dd>

    </dl>

    <table id="tblProduits" class="table table-striped table-bordered" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th style="width:150px">Description</th>
                <th style="width:150px">Quantité</th>
                <th style="width:150px">Prix</th>
                <th style="width:150px">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Produit p in @ViewBag.Produits)
            {
                <tr>
                    <td>@p.Description</td>
                    <td>@p.Qantity</td>
                    <td>@p.Price</td>
                    <td>@(p.Price *p.Qantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
